@model ParkyWeb.Models.ViewModels.TrailsViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Trails List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Create New Trail</a>
        </div>
    </div>
    <br />
    <br />
    <div class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr class="table">
                <th>National Park</th>
                <th>Trail Name</th>
                <th>Distance</th>
                <th>Difficulty</th>
                <th></th>
            </tr>
            
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="js/trails.js"></script>
}